# .env.example
# Environment variables for Singapore Company ETL Pipeline
# Copy this file to .env and update with your values

# Database Configuration
DB_PATH=singapore_companies.db
BACKUP_PATH=./backups/

# ETL Configuration
TARGET_COMPANY_COUNT=10000
BATCH_SIZE=100
MAX_WORKERS=4

# LLM Configuration
LLM_MODEL=microsoft/DialoGPT-medium
LLM_DEVICE=auto
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# Data Quality Thresholds
MIN_COMPLETENESS_SCORE=50.0
MIN_ACCURACY_SCORE=70.0
FUZZY_MATCH_THRESHOLD=85

# Web Scraping Configuration
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
DELAY_BETWEEN_REQUESTS=0.5
MAX_CONCURRENT_REQUESTS=5
HEADLESS_BROWSER=true

# Feature Flags
ENABLE_WEBSITE_SCRAPING=true
ENABLE_LLM_ENRICHMENT=true

# API Keys (optional - for enhanced data sources)
# Uncomment and add your API keys if available
# GOOGLE_API_KEY=your_google_api_key_here
# LINKEDIN_API_KEY=your_linkedin_api_key_here
# DATA_GOV_SG_API_KEY=your_data_gov_sg_api_key_here

# Chrome/Selenium Configuration (for web scraping)
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true